<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/top_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_panel_background"
    android:padding="@dimen/padding_vertical_24"
    tools:visibility="visible"
    android:visibility="gone">

    <ImageButton
        android:id="@+id/close_tags_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:background="@color/translucent_background"
        android:contentDescription="@string/close_tag_chooser"
        android:src="@drawable/cross_icon"
        tools:visibility="visible" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/tag_chips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"/>
</FrameLayout>